extends layout

block content
    div.container
        h2.page-header Login
        p Please Login usign the form below
        if errors
            each error, i in errors
                p.alert.alert-danger #{error.msg}
        form(method="POST", action='/users/login')
            label Email
            input.form-control(name='username', type='text', placeholder="Enter Email").form-group
            label Password
            input.form-control(name='password', type='password', placeholder="Enter Password").form-group
            input.btn.btn-primary(type='submit',name='submit', value='Login')    
